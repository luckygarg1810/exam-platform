# ─────────────────────────────────────────────────────────────────
# GBU Exam Platform — Environment Variables
# Copy to .env and fill in your values before running docker-compose
# ─────────────────────────────────────────────────────────────────

# ── PostgreSQL ────────────────────────────────────────────────────
DB_NAME=examdb
DB_USER=examuser
DB_PASSWORD=change_me_strong_password

# ── Redis ─────────────────────────────────────────────────────────
REDIS_PASSWORD=change_me_redis_password

# ── RabbitMQ ──────────────────────────────────────────────────────
RABBITMQ_USER=examuser
RABBITMQ_PASSWORD=change_me_rabbitmq_password

# ── MinIO ─────────────────────────────────────────────────────────
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=change_me_minio_secret_key

# ── JWT ───────────────────────────────────────────────────────────
# Must be at least 64 characters for HS512
JWT_SECRET=change_me_use_at_least_64_chars_secret_key_for_hs512_algorithm_
JWT_ACCESS_EXPIRY=3600000      # 1 hour in milliseconds
JWT_REFRESH_EXPIRY=604800000   # 7 days in milliseconds

# ── Mail ──────────────────────────────────────────────────────────
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
